{% extends 'base.html.twig' %}

{% block title %}Ecommerce!{% endblock %}

{% block body %}
    <div class="hero-space">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <h1 class="hero-space-headline">Artisanal Shearing for the Dapper Sheep</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <h2 class="hero-space-text">Before</h2>
                    <div class="text-center">
                        <img alt="" src="{{ asset('build/images/static/before.png') }}"/>
                    </div>

                </div>
                <div class="col-sm-6">
                    <h2 class="hero-space-text">After</h2>
                    <div class="text-center">
                        <img alt="" class="center-block" src="{{ asset('build/images/static/after.png') }}"/>
                    </div>
                </div>
            </div>
        </div>
    </div>

    </div>
    <div class="container" style="margin-top: 20px;">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    {% for product in products %}
                        <div class="col-sm-4">
                            <div class="shear-product">
                                <a href="{{ path('app_product_show', {slug: product.slug}) }}">
                                    {#                                    <img class="center-block shear-product-img" height="100" src="{{ asset('uploads/'~product.imageFilename) }}"/>#}
                                    <div class="text-center">
                                        <img alt="" class="center-block shear-product-img" height="100" src="#"/>
                                    </div>

                                    <p class="text-center shear-product-title">{{ product.name }}
                                        <span>${{ product.price }}</span></p>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
