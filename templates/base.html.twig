<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}SheepShear Club{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            {{ encore_entry_link_tags('footer') }}
            <link href='https://fonts.googleapis.com/css?family=Lobster+Two' rel='stylesheet' type='text/css'>
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
{#        {% include('layouts/_header.html.twig') %}#}
        {% for msg in app.session.flashBag.get('success') %}
            <div class="sheep-flash alert alert-success">{{ msg }}</div>
        {% endfor %}

        {% for msg in app.session.flashBag.get('error') %}
            <div class="sheep-flash alert alert-danger">{{ msg }}</div>
        {% endfor %}

        <nav class="navbar  fixed-top navbar-light bg-light">
            <div class="container-fluid">
{#                <img alt="" class="ssc-logo" src="{{ asset('build/images/static/logo-ecommerce.png') }}"/>#}

                <a class="navbar-brand" href="{{ path('app_product_index') }}">
                    <img  src="{{ asset('build/images/static/sheep-shear-club-logo.png') }}" alt="" class="ssc-logo">
                    SheepShear Club
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="nav">
                        {% if is_granted('ROLE_USER') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_login') }}">Login</a>
                            </li>
                        {% endif %}
                        <li class="nav-item">
                            <a class="nav-link" href="#">Pricing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span class="fa fa-shopping-cart" aria-hidden="true"></span> Checkout
                            </a>
                        </li>
                    </ul>
                </div><!--/.nav-collapse -->

            </div>
        </nav>

        {% block body %}{% endblock %}

        <footer class="footer footer-styling">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <a class="footer-link" href="{{ path('app_product_index')}}"><p>Sheep Shear club</p></a>
                        <div class="social-icons pull-right">
                            <a href="#">
                                <p class="instagram-text">Share your new look with us:</p>
                                <img alt="" class="instagram" src="{{ asset('build/images/static/instagram.png') }}"/>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </body>
</html>
